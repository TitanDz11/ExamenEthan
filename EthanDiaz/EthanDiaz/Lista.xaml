<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EthanDiaz.Lista">
    <ContentPage.Content>
        <StackLayout>

            <ListView x:Name="ListaUbicacion" 
                      ItemSelected="ListaUbicacion_ItemSelected"
                      ItemTapped="ListaUbicacion_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Descripcion}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>